@model ExpenseTracker.Models.Transaction

@{
    ViewData["PageTitle"] = Model.TransactionId == 0 ? "Создайте новую операцию" : "Редактировать операцию"; 
}

<div class="row">

    @*left*@
    <div class="col-md-7">
        <div class="widget p-5">
            <form asp-action="AddOrEdit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input type="hidden" name="TransactionId" value="@Model.TransactionId" />

                <div class="form-group">
                    <label asp-for="CategoryId" class="control-label">Категория</label>
                    @Html.DropDownListFor(model => model.CategoryId, ViewBag.Categories as SelectList, "--Выберите категорию--")
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                    @*@Html.ValidationMessageFor( model => model.CategoryId)*@
                    @*<select asp-for="@ViewBag.Categories" class="form-control"></select>*@
                </div>

                <div class="form-group">
                    <label asp-for="Amount" class="control-label">Доход/Расход</label>
                    <input asp-for="Amount" class="form-control" />
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Date" class="control-label">Дата</label>
                    <input asp-for="Date" class="form-control" />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Note" class="control-label">Примечание</label>
                    <input asp-for="Note" class="form-control" />
                    <span asp-validation-for="Note" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Добавить" class="btn btn-warning" />
                </div>
            </form>
        </div>
    </div>

    @*ridth*@
    <div class="col-md-5">
        <div class="widget h-100 d-flex justify-content-center align-items-center">
            <i class="fa-solid fa-money-bill-transfer fa-2xl"></i>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

